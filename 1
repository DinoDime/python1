def computepay(hours, rate):
    if hours > 40:
        overtime_hours = hours - 40
        overtime_rate = rate * 1.5
        overtime_pay = overtime_rate * overtime_hours
        normalrate = 40 * rate;
        totalpay = normalrate + overtime_pay
        return totalpay

    else:
         totalrate = hours * rate
         return totalrate

hrs = input("hours:")
hrs = float(hrs)
rate = input("rate:")
rate = float(rate)

print("Pay", computepay(hrs, rate))
